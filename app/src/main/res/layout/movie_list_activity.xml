<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">
    <TextView
        android:id="@+id/movie_list_activity_searchedActors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/movie_list_activity_searchedActors"/>
    <TextView
        android:id="@+id/movie_list_activity_actorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_list_activity_searchedActors"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textSize="16sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/movie_list_activity_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/movie_list_activity_actorName"
        android:scrollbars="vertical"
        tools:listitem="@layout/movie_list_recycler_view_item">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>